@model IEnumerable<eCommerceShop.Models.Model>

<br />
<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Models of vehicle</h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-info" asp-action="Create">Add New Model</a>
    </div>
    <br />
    <div class="col-12">
        <table class="table table-striped border">
            <tr class="table-info">
                <th>
                    @Html.DisplayNameFor(n => n.Make)
                </th>
                <th>
                    @Html.DisplayNameFor(n => n.Name)
                </th>
                <th>

                </th>
            </tr>
            @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(m => item.Make.Name)
            </td>
            <td>
                @Html.DisplayFor(m => item.Name)
            </td>
            <td class="text-right">
                <div class="btn-group" role="group">
                    <a type="button" class="btn btn-primary" href="@Url.Action("Edit", new {id = item.Id})">Edit</a>
                    <form method="post" action="Delete">
                        <input onclick="if (!confirm('Do you want to delete record?')){return false}" type="submit" class="btn btn-danger rounded-0" asp-action="Delete" asp-route-id="@item.Id" value="Delete" />
                    </form>
                </div>
            </td>
        </tr>
            }
        </table>
    </div>
</div>

